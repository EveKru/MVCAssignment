@model IEnumerable<WebApp.ViewModels.CourseModel>
@{
    ViewData["Title"] = "Courses";
}

<section class="courses">
    <div class="container">
        <h2 id="title">Courses</h2>
        <div class="items">
            @foreach (var item in Model)
            {
                <div class="course">
                    @if (item.IsBestseller)
                    {
                        <div class="best-seller">
                            <p>Best Seller</p>
                        </div>
                    }
                    <img class="course-image" src="/images/@item.Image" alt="" />
                    <div class="content">
                        <h2>@item.Title</h2>
                        <p>By @item.Author</p>
                        <div class="course-prices">
                            @if (item.Discountprice > 0)
                            {
                                <div id="discountprice">$@item.Discountprice</div>
                            }
                            <div id="originalprice">$@item.Originalprice</div>
                        </div>
                        <div class="course-footer">
                            <div><i class="fa-regular fa-clock"></i> @item.Hours hours</div>
                            <div class="course-likes">
                                <div><i class="fa-regular fa-thumbs-up"> </i>@($"{item.LikesInProcent:P0}")</div>
                                <div>(@($"{item.LikesInNumbers / 1000m:F1}K"))</div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<partial name="~/Views/Shared/Partials/_WorkWithUsPartial.cshtml" />
