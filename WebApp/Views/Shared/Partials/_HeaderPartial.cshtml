@inject SignInManager<UserEntity> _signinManager

<div class="header">
    <div class="container">
        <a id="logo" asp-controller="Home" asp-action="Index"><img src="~/images/silicon-logotype-light.svg" alt="" ></a>
        <div id="menu" class="hide">
            <nav>
                <a class="menu-link" asp-controller="Home" asp-action="Index" asp-fragment="showcase">Overview</a>
                @if (_signinManager.IsSignedIn(User)) 
                {<a class="menu-link" asp-controller="Courses" asp-action="Index" asp-fragment="features">Courses</a>}
                else 
                {<a class="menu-link" asp-controller="Home" asp-action="Index" asp-fragment="features">Features</a>}
                <a class="menu-link" href="contact.html">Contact</a>
            </nav>
        </div>
        <div class="btn-switch">
            <label>Light</label>
            <label class="switch" for="switch-mode">
                <input type="checkbox" id="switch-mode"/>
                <div class="slider round"></div>
            </label>
            <label>Dark</label>
        </div>
        <div id="account-buttons" class="hide">
            @if (_signinManager.IsSignedIn(User))
            {
                <a class="btn-gray" asp-controller="Auth" asp-action="SignOut"><i class="fa-solid fa-right-to-bracket"></i><span>Sign Out</span></a>
                <a class="btn-theme" asp-controller="Account" asp-action="Details"><i class="fa-regular fa-user"></i><span>My account</span></a>
            }
            else
            {
                <a class="btn-gray" asp-controller="Auth" asp-action="SignIn"><i class="fa-solid fa-right-to-bracket"></i><span>Sign in</span></a>
                <a class="btn-theme" asp-controller="Auth" asp-action="SignUp"><i class="fa-regular fa-user"></i><span>Sign up</span></a>
            }
            <p>&copy; 2024 Silicon. All rights reserved.</p>
        </div>
        <button onclick="toggleMenu()" class="btn-mobile">
            <i class="fa-solid fa-bars"></i>
        </button>

    </div>
</div>
